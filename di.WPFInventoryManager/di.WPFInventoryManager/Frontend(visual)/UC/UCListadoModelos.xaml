<UserControl x:Class="di.WPFInventoryManager.Frontend_visual_.UC.UCListadoModelos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.WPFInventoryManager.Frontend_visual_.UC"
             mc:Ignorable="d" 
             x:Name="ucListadoModelos"
             Loaded="ucListadoModelos_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock
                Text="LISTADO DE MODELOS"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"/>
        </Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding listaModelo}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      ColumnWidth="*">
                <!--CanUserAddRows:para evitar que aparezca linea en blanco al final-->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NOMBRE DEL MODELO"
                                        Binding="{Binding Nombre}"/>
                    <DataGridTemplateColumn Header="MARCA - MODELO">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Marca}" FontWeight="Bold"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding Modelo}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="CANTIDAD DE ARTÍCULOS"
                    Binding="{Binding Articulos.Count}"/>
                    <DataGridTextColumn Header="TIPO DE MODELO"
                    Binding="{Binding TipoNavigation.Nombre}"/>
                    <DataGridTextColumn Header="DESCRIPCIÓN"
                    Binding="{Binding Descripcion}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
