<UserControl x:Class="di.WPFInventoryManager.Frontend_visual_.UC.UCListadoArticulo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:di.WPFInventoryManager.Frontend_visual_.UC"
             mc:Ignorable="d" 
             x:Name="ucListadoArticulo"
             Loaded="ucListadoArticulo_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <!-- TITULO -->
            <TextBlock
                Text="LISTADO DE ARTÍCULOS"
                FontSize="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"/>
        </Grid>
        <Grid>
            <!-- LE PROPORCIONAMOS LA LISTA DE ARTICULOS CREADA EN EL MVARTICULO-->
            <DataGrid
                ItemsSource="{Binding listaArticulos}"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ColumnWidth="*">
                <!--CanUserAddRows:para evitar que aparezca linea en blanco al final-->

                <DataGrid.Columns>
                    <DataGridTextColumn Header="NUMERO SERIE"
                        Binding="{Binding Numserie}"/>
                    <DataGridTextColumn Header="ESTADO"
                        Binding="{Binding Estado}"/>
                    <DataGridTemplateColumn Header="Fecha alta">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DatePicker SelectedDate="{Binding Fechaalta}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTemplateColumn Header="NOMBRE - APELLIDO1">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding UsuarioaltaNavigation.Username}" FontWeight="Bold"/>
                                    <TextBlock Text=" - "/>
                                    <TextBlock Text="{Binding UsuarioaltaNavigation.Apellido1}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="NOMBRE MODELO"
                        Binding="{Binding ModeloNavigation.Nombre}"/>



                    
                    
                    <DataGridTextColumn
                        Binding="{Binding EspacioNavigation.Nombre}">
                        <DataGridTextColumn.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image 
                                    Source="/Recursos/Iconos/gesusuario.png" 
                                    Width="20"
                                    Height="20" 
                                    Margin="0,0,5,0"/>
                                <TextBlock 
                                    Text="ESPACIO"
                                    FontWeight="Bold"/>
                            </StackPanel>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>


                    
                    


                    <DataGridTemplateColumn Header="DEPARTAMENTO">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock 
                                        Grid.Row="0"
                                        Text="{Binding DepartamentoNavigation.Nombre, 
                                        StringFormat=Departamento: {0}}" />

                                    <!-- Segunda línea: Número de préstamos -->
                                    <TextBlock 
                                        Grid.Row="1"
                                        Text="{Binding Salida.Count, 
                                        StringFormat=Numero de Préstamos: {0}}" />
                                </Grid>
                                
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </DockPanel>
</UserControl>
