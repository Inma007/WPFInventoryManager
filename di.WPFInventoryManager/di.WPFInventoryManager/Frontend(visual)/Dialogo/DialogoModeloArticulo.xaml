<mah:MetroWindow x:Class="di.WPFInventoryManager.Frontend_visual_.Dialogo.DialogoModeloArticulo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:di.WPFInventoryManager.Frontend_visual_.Dialogo"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Height="500"
      Width="600"
      WindowStartupLocation="CenterScreen"           
      Title="DialogoModeloArticulo"
      x:Name="diagModeloArticulo"
      Loaded="diagModeloArticulo_Loaded">

    <Grid Margin="10">
        <!-- Rectangulo inicial -->
        <Grid 
            Width="Auto"
            Height="100"
            Margin="0,0,0,20"
            VerticalAlignment="Top">
            <Rectangle
                 Fill="#454545"/>
            <TextBlock
                  Text="INSERTAR MODELO ARTICULO"
                  FontSize="30"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Foreground="White"/>
        </Grid>

        <!-- Formulario -->
        <Grid Margin="5">
            <TextBlock
                Text="Los campos con asterico son obligatorios"
                Margin="10,100,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                FontSize="16"
                FontWeight="Bold"
                />
            <TextBlock
                Text="DATOS DEL MODELO"
                Margin="10,140,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                FontSize="26"
                Foreground="Red"
                />  

            <Separator
                Margin="10,180,0,0"
                Width="550"
                Background="DarkGray"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>

            <StackPanel
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    Width="300"
    Margin="0,190,0,0">
                <!-- NOMBRE -->
                <TextBox
                Text="{Binding modeloArticulo.Nombre,ValidatesOnDataErrors=True,NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Nombre*"
                FontWeight="Bold"
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                Height="40"
                Margin="10"
                Background="LightGray"
                />

                <!-- MARCA -->
                <TextBox
                Text="{Binding modeloArticulo.Marca,ValidatesOnDataErrors=True,NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Marca*"
                FontWeight="Bold"
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                Height="40"
                Margin="10"
                Background="LightGray"/>
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="300"
                Margin="0,190,0,0">
            <!-- TIPO -->
                <ComboBox
                Style="{StaticResource MaterialDesignComboBox}"
                mat:HintAssist.Hint="Tipo*"
                FontWeight="Bold"
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                Height="40"
                Margin="10"
                BorderBrush="Gray"
                ItemsSource="{Binding listaTiposArticulos}"
                SelectedItem="{Binding modeloArticulo.TipoNavigation,
                ValidatesOnDataErrors=True,NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="Nombre"/>

                <!-- MODELO -->
                <TextBox
                Text="{Binding modeloArticulo.Modelo,UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Modelo"
                FontWeight="Bold"
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200"
                Height="40"
                Margin="10"
                Background="LightGray"/>
            </StackPanel>

            <!-- DESCRIPCION -->
                <TextBox
                Text="{Binding modeloArticulo.Descripcion, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource MaterialDesignTextBox}"
                mat:HintAssist.Hint="Descripcion"
                FontWeight="Bold"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="470"
                Height="40"
                Margin="10,250,10,10"
                Background="LightGray"/>
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,10,0,10">
                <!-- BOTON AÑADIR -->
                <Button
                    Background="Red"
                    Foreground="White"
                    BorderBrush="Red"
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Añadir"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="200"
                    Height="40"
                    Margin="10"
                    Click="btnAnyadirModeloArticulo_Click"
                    IsEnabled="{Binding HasErrors}"/>
                    <!--para deshabilitar el boton-->

                <!-- BOTON CANCELAR -->
                <Button
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="Cancelar"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Red"
                    BorderThickness="2"
                    Foreground="Red"
                    Width="200"
                    Height="40"
                    Margin="10"
                    Click="btnCancelarModeloArticulo_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</mah:MetroWindow>
